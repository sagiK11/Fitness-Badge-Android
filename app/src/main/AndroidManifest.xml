<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.sagikor.android.fitracker">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_fitracker_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_fitracker_launcher"
        android:supportsRtl="true"
        tools:ignore="GoogleAppIndexingWarning"
        tools:replace="android:icon">

        <activity
            android:name=".ui.view.SignInActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppSecondaryTheme">
            <intent-filter  >
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.view.MainActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
        </activity>

        <activity
            android:name=".ui.view.RegisterActivity"
            android:screenOrientation="portrait"
            android:label="@string/sign_up_screen"
            android:theme="@style/AppSecondaryTheme" />

        <activity
            android:name=".ui.view.AddStudentActivity"
            android:screenOrientation="portrait"
            android:label="@string/enter_update_data"
            android:theme="@style/AppThirdTheme" />

        <meta-data
            android:name="android.app.default_searchable"
            android:value=".SearchableActivity" />

        <activity android:name=".ui.view.StudentActivity" />

        <activity
            android:name=".ui.view.ViewStudentsActivity"
            android:screenOrientation="portrait"
            android:label="@string/view_student_results"
            android:theme="@style/AppThirdTheme" />

        <activity
            android:name=".ui.view.UpdateStudentActivity"
            android:screenOrientation="portrait"
            android:label="@string/Update_student"
            android:theme="@style/AppThirdTheme" />

        <activity
            android:name=".ui.view.StatisticsActivity"
            android:screenOrientation="portrait"
            android:label="@string/statistics"
            android:theme="@style/AppSecondaryTheme" />

        <activity
            android:name=".ui.view.SettingsActivity"
            android:screenOrientation="portrait"
            android:label="@string/setting"
            android:theme="@style/AppThirdTheme" />

        <activity
            android:name=".ui.view.AddClassesActivity"
            android:screenOrientation="portrait"
            android:label="@string/adding_classes"
            android:theme="@style/AppThirdTheme" />



    </application>

</manifest>