<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#5B377A</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/blurredish_red</item>
        <item name="actionBarSize">60dp</item>
        <item name="android:layoutDirection">ltr</item>
        <item name="android:titleTextStyle">@color/actionBarTextColor</item>

    </style>

    <style name="default_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    <item name="android:textAppearance">?android:textAppearanceMedium</item>
</style>

    <style name="buttons_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#B4BAD4</item>
        <item name="android:alpha">0.75</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#240855</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>

    </style>

    <style name="AlertDialogCustom" parent="@android:style/Theme.Dialog">
        <item name="android:textColor">#0A0A0A</item>
        <item name="android:textSize">18sp</item>
        <item name="android:divider">#FF20A7A7</item>
        <item name="android:dividerHeight">10dp</item>
    </style>

</resources>
